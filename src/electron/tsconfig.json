{
  "compilerOptions": {
    "outDir": "../../build",
    "target": "ES2015",
    "module": "commonjs",
    "sourceMap": true,
    "stripInternal": true,
    "lib": [
      "es2015",
      "esnext",
      "DOM" // TODO: https://github.com/electron/electron/issues/27092#issuecomment-1483915197
    ],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
