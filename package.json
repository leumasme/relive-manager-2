{
  "name": "relive-manager",
  "description": "Replay Manager for Radeon ReLive.",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leumasme/relive-manager-2.git"
  },
  "author": {
    "name": "leumasme",
    "email": "samumert+npmdmme@gmail.com",
    "url": "https://github.com/leumasme"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leumasme/relive-manager-2/issues"
  },
  "keywords": [
    "electron",
    "svelte",
    "typescript",
    "electron-builder",
    "electron-log",
    "tslint",
    "electron-settings",
    "electron-updater",
    "rollup"
  ],
  "homepage": "https://github.com/leumasme/relive-manager-2#readme",
  "main": "build/index.js",
  "scripts": {
    "start": "wireit",
    "build": "wireit",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "predist": "npm run build",
    "dist": "wireit",
    "format": "wireit",
    "lint": "wireit",
    "prepublishOnly": "npm run lint",
    "preversion": "wireit"
  },
  "wireit": {
    "start": {
      "command": "electron .",
      "service": true,
      "dependencies": [
        "build-frontend-dev",
        "build-electron-dev"
      ],
      "files": [
        "build/**"
      ]
    },
    "build": {
      "dependencies": [
        "build-frontend-prod",
        "build-electron-prod"
      ]
    },
    "build-frontend-dev": {
      "command": "rollup -c -w",
      "env": {
        "NODE_ENV": "development"
      },
      "files": [
        "src/frontend/**",
        "rollup.config.mjs"
      ],
      "service": {
        "readyWhen": {
          "lineMatches": "created"
        }
      }
    },
    "build-electron-dev": {
      "command": "tsc --pretty --project ./src/electron/tsconfig.json",
      "files": [
        "src/electron/**"
      ],
      "output": [
        "build/**"
      ]
    },
    "build-frontend-prod": {
      "command": "rollup -c",
      "env": {
        "NODE_ENV": "production"
      },
      "files": [
        "src/frontend/**",
        "rollup.config.mjs"
      ],
      "output": [
        "build/public/**"
      ]
    },
    "build-electron-prod": {
      "command": "tsc --pretty --project ./src/electron/tsconfig.prod.json",
      "files": [
        "src/electron/**"
      ],
      "output": [
        "build/**"
      ]
    },
    "preversion": {
      "dependencies": [
        "lint",
        "format"
      ]
    },
    "lint": {
      "dependencies": [
        "lint-electron",
        "lint-frontend",
        "check-svelte"
      ]
    },
    "lint-electron": {
      "command": "eslint -c eslint.electron.json --ext .js,.ts src/electron",
      "files": [
        "src/electron/**"
      ]
    },
    "lint-frontend": {
      "command": "eslint -c eslint.svelte.json --ext .js,.ts src/frontend",
      "files": [
        "src/frontend/**"
      ]
    },
    "check-svelte": {
      "command": "svelte-check --workspace src/frontend --output human",
      "files": [
        "src/frontend/**"
      ]
    },
    "format": {
      "command": "prettier --write \"src/**\"",
      "files": [
        "src/**"
      ]
    },
    "dist": {
      "command": "electron-builder",
      "env": {
        "CSC_IDENTITY_AUTO_DISCOVERY": "false"
      }
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/fluent-ffmpeg": "^2.1.21",
    "chokidar": "^3.5.3",
    "electron-log": "^4.4.8",
    "fast-glob": "^3.2.12",
    "fluent-ffmpeg": "^2.1.2",
    "rollup-plugin-copy": "^3.4.0",
    "typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@tsconfig/svelte": "^4.0.1",
    "@types/clean-css": "^4.2.6",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "electron": "^23.2.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^46.4.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "rollup": "^3.25.3",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^3.57.0",
    "svelte-check": "^3.4.4",
    "svelte-preprocess": "^5.0.4",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "wireit": "^0.9.5"
  },
  "build": {
    "productName": "Replay Manager",
    "appId": "temm.relive.manager",
    "copyright": "Copyright Â© 2022 ${author}",
    "icon": "public/favicon.png",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "leumasme",
        "repo": "relive-manager-2"
      }
    ]
  }
}
