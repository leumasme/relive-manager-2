{
  "name": "relive-manager",
  "description": "Replay Manager for Radeon ReLive.",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leumasme/relive-manager-2.git"
  },
  "author": {
    "name": "leumasme",
    "email": "samumert+npmdmme@gmail.com",
    "url": "https://github.com/leumasme"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leumasme/relive-manager-2/issues"
  },
  "keywords": [
    "electron",
    "svelte",
    "typescript",
    "electron-builder",
    "electron-log",
    "tslint",
    "electron-settings",
    "electron-updater",
    "rollup"
  ],
  "homepage": "https://github.com/leumasme/relive-manager-2#readme",
  "main": "build/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all -p -r build:frontend:dev start:electron",
    "build": "cross-env NODE_ENV=production npm-run-all -s build:frontend:prod build:electron:prod",
    "build:frontend:dev": "cross-env NODE_ENV=development rollup -c -w",
    "build:frontend:prod": "cross-env NODE_ENV=production rollup -c",
    "build:electron:dev": "tsc --p ./src/electron/tsconfig.json",
    "build:electron:dev:watch": "tsc -w --p ./src/electron/tsconfig.json",
    "build:electron:prod": "cross-env NODE_ENV=production tsc --p ./src/electron/tsconfig.prod.json",
    "validate:svelte": "svelte-check",
    "start:electron:run": "electron .",
    "start:electron:nodemon": "nodemon",
    "start:electron:dev": "npm-run-all -s build:electron:dev start:electron:nodemon",
    "start:electron": "npm-run-all -p build:electron:dev:watch start:electron:dev",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "predist": "npm run build",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "format": "prettier --write \"src/**/**/*\"",
    "lint:electron": "eslint -c eslint.electron.json --ext .js,.ts src/electron",
    "lint:svelte": "eslint -c eslint.svelte.json --ext .js,.ts src/frontend",
    "lint": "npm-run-all -s lint:electron lint:svelte",
    "prepublishOnly": "npm-run-all -s lint",
    "preversion": "npm-run-all -s lint format"
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/fluent-ffmpeg": "^2.1.21",
    "chokidar": "^3.5.3",
    "electron-log": "^4.4.8",
    "fast-glob": "^3.2.12",
    "fluent-ffmpeg": "^2.1.2",
    "rollup-plugin-copy": "^3.4.0",
    "typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@tsconfig/svelte": "^4.0.1",
    "@types/clean-css": "^4.2.6",
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "electron": "^23.2.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^46.4.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "rollup": "^3.25.3",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^3.57.0",
    "svelte-check": "^3.4.4",
    "svelte-preprocess": "^5.0.4",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "build": {
    "productName": "Replay Manager",
    "appId": "temm.relive.manager",
    "copyright": "Copyright Â© 2022 ${author}",
    "icon": "public/favicon.png",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "leumasme",
        "repo": "relive-manager-2"
      }
    ]
  }
}
